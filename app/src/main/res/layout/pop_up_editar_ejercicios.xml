<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:orientation="vertical"
    android:layout_width="350dp"
    android:layout_height="475dp"
    tools:context=".view.ActivityCrearRutinas"
    android:padding="5dp"
    android:layout_gravity="center"
    android:background="#D7FBF5">

    <ImageView
        android:id="@+id/ivCloseEditPopUp"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1"
        android:src ="@drawable/baseline_close_24"/>
    <com.example.chymv2.view.CustomEditText
        android:id="@+id/cetSeries"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivCloseEditPopUp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:hint="Series"
        android:textColorHint="#ABA8A8"
    />
    <com.example.chymv2.view.CustomEditText
        android:id="@+id/cetRepes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cetSeries"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:hint="Repeticiones"
        android:textColorHint="#ABA8A8"
    />
    <com.example.chymv2.view.CustomEditText
        android:id="@+id/cetKg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cetRepes"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:hint="Kg"
        android:textColorHint="#ABA8A8"
    />


    <Button
        android:id="@+id/btnEditPopUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aplicar Cambios"
        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>